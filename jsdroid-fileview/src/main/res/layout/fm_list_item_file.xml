<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!--Image-->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/fm_ic_file"
            android:duplicateParentState="true" />
    </LinearLayout>
    <!--fileName-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/fileDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#999" />
    </LinearLayout>
    <!--rename-->
    <LinearLayout
        android:id="@+id/btn_rename"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/fm_selector_button"
        android:clickable="true"
        android:padding="8dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/fm_selector_rename"
            android:duplicateParentState="true" />
    </LinearLayout>
    <!--delete-->
    <LinearLayout
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/fm_selector_button"
        android:clickable="true"
        android:padding="8dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/fm_selector_delete"
            android:duplicateParentState="true" />
    </LinearLayout>
    <!--select-->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:padding="8dp">

        <com.jsdroid.fileview.CheckBox
            android:id="@+id/check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:duplicateParentState="true" />
    </LinearLayout>
</LinearLayout>
