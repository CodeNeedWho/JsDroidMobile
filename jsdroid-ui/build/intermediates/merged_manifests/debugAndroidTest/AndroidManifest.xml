<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jsdroid.ui.test" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <instrumentation
        android:name="android.support.test.runner.AndroidJUnitRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.jsdroid.ui.test"
        android:targetPackage="com.jsdroid.ui.test" />

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application android:debuggable="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.yhao.floatwindow.FloatActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:theme="@style/permission_PermissionActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
    </application>

</manifest>