<?xml version="1.0" encoding="utf-8"?>
<com.ditclear.swipelayout.SwipeDragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    app:ios="true"
    app:swipe_direction="right"
    app:swipe_enable="true">

    <LinearLayout
        android:id="@+id/btn_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:tag="content">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/logo_blue_dark" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp" />
        <!--收藏按钮-->
        <CheckBox
            android:id="@+id/item_favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:button="@drawable/favorite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="#f60"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="卸载"
            android:textColor="@color/qmui_config_color_white" />

    </LinearLayout>
</com.ditclear.swipelayout.SwipeDragLayout>