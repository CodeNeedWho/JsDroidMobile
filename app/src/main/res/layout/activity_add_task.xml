<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/topbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <com.jsdroid.app.main.task.option.PlanTypePicker
                android:id="@+id/taskTypePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="任务类型："
                android:padding="5dp"
                android:textColorHint="#666"
                app:propStyle="light" />

            <com.jsdroid.app.main.task.option.CycleTypePicker
                android:id="@+id/cycleTypePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="周期类型："
                android:padding="5dp"
                app:propStyle="light" />

            <com.jsdroid.app.main.task.option.ToolPicker
                android:id="@+id/scriptPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="选择脚本："
                android:padding="5dp"
                app:propStyle="light" />

            <com.jsdroid.app.main.task.option.TimeView
                android:id="@+id/timeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="开始时间："
                android:padding="5dp"
                app:propStyle="light" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"></TimePicker>
        </LinearLayout>
    </ScrollView>
</LinearLayout>